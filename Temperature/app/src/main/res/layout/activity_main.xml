<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inputTemperature"
        android:layout_width="383dp"
        android:layout_height="519dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="100dp"
        android:hint="輸入溫度"
        android:inputType="numberDecimal"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/resultText"
        android:layout_width="419dp"
        android:layout_height="122dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="768dp"
        android:ems="10"
        android:inputType="text"
        android:text="結果將顯示在這裡"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cToFButton"
        android:layout_width="275dp"
        android:layout_height="132dp"
        android:layout_marginStart="420dp"
        android:layout_marginTop="944dp"
        android:onClick="convertCelsiusToFahrenheit"
        android:text="攝氏轉華氏"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fToCButton"
        android:layout_width="248dp"
        android:layout_height="139dp"
        android:layout_marginStart="436dp"
        android:layout_marginTop="1152dp"
        android:onClick="convertFahrenheitToCelsius"
        android:text="華氏轉攝氏"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>