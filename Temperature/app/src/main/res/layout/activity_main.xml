<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inputTemperature"
        android:layout_width="396dp"
        android:layout_height="328dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="72dp"
        android:hint="輸入溫度"
        android:inputType="numberDecimal"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/temp"
        android:layout_width="477dp"
        android:layout_height="168dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="556dp"
        android:ems="10"
        android:inputType="text"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/C"
        android:layout_width="173dp"
        android:layout_height="118dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="932dp"
        android:onClick="CtoF"
        android:text="攝氏轉華氏"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/F"
        android:layout_width="155dp"
        android:layout_height="99dp"
        android:layout_marginStart="648dp"
        android:layout_marginTop="948dp"
        android:onClick="FtoC"
        android:text="華氏轉攝氏"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="184dp"
        android:layout_height="128dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="936dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="168dp"
        android:layout_height="114dp"
        android:layout_marginStart="464dp"
        android:layout_marginTop="936dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>